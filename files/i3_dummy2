set $mode_sup Super mode (experimental)
bindsym $mod+n mode "$mode_sup"
mode "$mode_sup" {
     bindsym w      mode "$mode_win"
     bindsym p      mode "$mode_mpc"
     bindsym z      mode "$mode_quit"
     bindsym $mod+w      mode "$mode_win"
     bindsym $mod+p      mode "$mode_mpc"

     bindsym e exec --no-startup-id setxkbmap us; exec pkill -SIGRTMIN+20 i3blocks; mode "default"
     bindsym f exec --no-startup-id setxkbmap ca; exec pkill -SIGRTMIN+20 i3blocks; mode "default"
     
     bindsym q      mode "default"
     bindsym $mod+q      mode "default"
     bindsym Escape mode "default"
}
set $mode_quit Quit mode (experimental)
mode "$mode_quit" {
     bindsym z      exec systemctl suspend; mode "default"
     bindsym q      exec shutdown now
     bindsym Escape mode "default"
}
set $mode_win Window mode (experimental)
mode "$mode_win" {
     bindsym h      focus left  ; mode "default"
     bindsym j      focus down  ; mode "default"
     bindsym k      focus up    ; mode "default"
     bindsym l      focus right ; mode "default"
     
     bindsym f      fullscreen toggle ; mode "default"
     bindsym $mod+f fullscreen toggle ; mode "default"

     bindsym $mod+h focus left  ; mode "default"
     bindsym $mod+j focus down  ; mode "default"
     bindsym $mod+k focus up    ; mode "default"
     bindsym $mod+l focus right ; mode "default"

     bindsym Shift+h move left 
     bindsym Shift+j move down 
     bindsym Shift+k move up   
     bindsym Shift+l move right

     bindsym $mod+Shift+h move left 
     bindsym $mod+Shift+j move down 
     bindsym $mod+Shift+k move up   
     bindsym $mod+Shift+l move right

     bindsym q      mode "default"
     bindsym Escape mode "default"
}

